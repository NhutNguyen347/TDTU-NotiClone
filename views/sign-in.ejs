<body class="sign-in">
	

	<div class="wrapper">
		
        <div id="particles-js"></div>
		<div class="sign-in-page">
			<div class="signin-popup">
				<div class="signin-pop">
					<div class="row">
						<div class="col-lg-6">
							<div class="cmp-info">
								<div class="cm-logo">
									<img src="images/tdt_logo_white.png" alt="main-logo">
									<p>Welcome to our TDTU Notification Center Clone</p>
								</div><!--cm-logo end-->	
								<img style="filter: hue-rotate(83deg);" src="images/cm-main-img.png" alt="">			
							</div><!--cmp-info end-->
						</div>

						<div class="col-lg-6">
							<div class="login-sec">
								<ul class="sign-control">
									<li data-tab="tab-1" class="<% if(locals.error1){ %> current <% } %>"><a href="#" title="">Students</a></li>				
									<li data-tab="tab-2" class="current"><a href="#" title="">Supervisors</a></li>				
								</ul>
								
								<!--For Student sign in section-->
								<div class="sign_in_sec" id="tab-1">
									
									<h3>Sign in as a student</h3>

									<div class="login-resources">
										<h4>Login Via Google</h4>
										<ul>
											<li><a href="/auth/google" title="" class="fb"><i class="fa fa-google"></i>Login Via Google ðŸ˜ƒ</a></li>
										</ul>
										<% if(locals.error1) { %>
											<div class="alert alert-danger" role="alert">
												<%= error2 %>
											</div>
										<% } %>
									</div><!--login-resources end-->
								</div><!--sign_in_sec end-->

								<!--For Admin and Dean sign in section-->
								<!--Nhut deleted tab4 cuz we just need only 1 and the role picker-->
								<div class="sign_in_sec current" id="tab-2">
									<div class="signup-tab">
										<h2>ðŸ˜‰ Sign in as Admin/Dean ðŸ˜‰</h2>
									</div><!--signup-tab end-->	
									<div class="dff-tab current" id="tab-3">
										<form method="POST">
											<div class="row">
												<div class="col-lg-12 no-pdd">
													<div class="sn-field">
														<input type="text" name="username" placeholder="Username" value="<%= username%>">
														<i class="la la-user"></i>
													</div>
												</div>
												
												<div class="col-lg-12 no-pdd">
													<div class="sn-field">
														<input type="password" name="password" placeholder="Password" value="<%= password%>">
														<i class="la la-lock"></i>
													</div>
												</div>
												
												<!-- Define error alert here when local error is set -->
												<% if(locals.error2) { %>
													<div class="alert alert-danger" role="alert">
														<%= error2 %>
													</div>
												<% } %>

												<div class="col-lg-12 no-pdd">
													<button style="background-color: #99C68E;" type="submit" value="submit">Login ðŸ˜ƒ</button>
												</div>
											</div>
										</form>
									</div><!--dff-tab end-->
									
								</div>		
							</div><!--login-sec end-->
						</div>
					</div>		
				</div><!--signin-pop end-->
			</div><!--signin-popup end-->
			
			<!--Footer section-->
			<div class="footy-sec">
				<div class="container">
					<ul>
						<li><a href="/sendMessage" title="">Help Center</a></li>
						<li><a href="#" title="">Copyright Policy</a></li>
					</ul>
					<p><img src="images/copy-icon.png" alt="">Copyright 2021 by Nhut and Brandon</p>
				</div>
			</div><!--footy-sec end-->
		</div><!--sign-in-page end-->


	</div><!--theme-layout end-->



<script type="text/javascript" src="js/jquery.min.js"></script>
<script type="text/javascript" src="js/popper.js"></script>
